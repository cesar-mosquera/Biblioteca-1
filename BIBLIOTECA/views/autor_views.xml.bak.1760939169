<odoo>
  <!-- LISTA de Autores -->
  <record id="view_biblioteca_autor_tree" model="ir.ui.view">
    <field name="name">biblioteca.autor.tree</field>
    <field name="model">biblioteca.autor</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" string="Nombre"/>
      </list>
    </field>
  </record>

  <!-- FORM de Autores -->
  <record id="view_biblioteca_autor_form" model="ir.ui.view">
    <field name="name">biblioteca.autor.form</field>
    <field name="model">biblioteca.autor</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" string="Nombre"/>
          </group>
          <notebook>
            <page string="Libros">
              <!-- One2many a libros: aquí SÍ usamos campos de biblioteca.libro -->
              <field name="libro_ids">
                <tree editable="bottom">
                  <field name="name" string="Título"/>
                  <field name="anio_pub" string="Año"/>
                  <field name="estado"/>
                </tree>
                <form>
                  <sheet>
                    <group>
                      <field name="name" string="Título"/>
                      <field name="anio_pub" string="Año"/>
                      <field name="estado"/>
                    </group>
                  </sheet>
                </form>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
