<odoo>
  <!-- Tree -->
  <record id="view_biblioteca_autor_tree" model="ir.ui.view">
    <field name="name">biblioteca.autor.tree</field>
    <field name="model">biblioteca.autor</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="birth_date"/>
        <field name="death_date"/>
      </list>
    </field>
  </record>

  <!-- Form -->
  <record id="view_biblioteca_autor_form" model="ir.ui.view">
    <field name="name">biblioteca.autor.form</field>
    <field name="model">biblioteca.autor</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_fetch_openlibrary"
                  type="object"
                  string="Buscar en OpenLibrary"
                  class="btn-primary"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="birth_date"/>
            <field name="death_date"/>
            <field name="openlib_key" readonly="1"/>
            <field name="bio"/>
          </group>
          <notebook>
            <page string="Libros">
              <field name="libro_ids">
                <tree>
                  <field name="name"/>
                  <field name="anio_pub"/>
                  <field name="estado"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
