<odoo>
  <!-- TREE -->
  <record id="view_biblioteca_usuario_tree" model="ir.ui.view">
    <field name="name">biblioteca.usuario.tree</field>
    <field name="model">biblioteca.usuario</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="cedula"/>
        <field name="email"/>
        <field name="phone"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <!-- FORM -->
  <record id="view_biblioteca_usuario_form" model="ir.ui.view">
    <field name="name">biblioteca.usuario.form</field>
    <field name="model">biblioteca.usuario</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="cedula"/>
          </group>
          <group>
            <field name="email"/>
            <field name="phone"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- ACCIÓN -->
  <record id="action_biblioteca_usuario" model="ir.actions.act_window">
    <field name="name">Usuarios</field>
    <field name="res_model">biblioteca.usuario</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- MENÚ (debajo de Biblioteca) -->
  <menuitem id="menu_biblioteca_usuarios"
            name="Usuarios"
            parent="menu_biblioteca_root"
            action="action_biblioteca_usuario"
            sequence="40"/>
</odoo>
