<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Préstamos -->
    <record id="view_biblioteca_prestamo_tree" model="ir.ui.view">
        <field name="name">biblioteca.prestamo.tree</field>
        <field name="model">biblioteca.prestamo</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="libro_id"/>
                <field name="socio_id"/>
                <field name="fecha_prestamo"/>
                <field name="fecha_devolucion"/>
                <field name="estado"/>
                <field name="dias_atraso"/>
            </list>
        </field>
    </record>

    <record id="view_biblioteca_prestamo_form" model="ir.ui.view">
        <field name="name">biblioteca.prestamo.form</field>
        <field name="model">biblioteca.prestamo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Datos del préstamo">
                        <field name="name"/>
                        <field name="libro_id"/>
                        <field name="socio_id"/>
                        <field name="fecha_prestamo"/>
                        <field name="fecha_devolucion"/>
                        <field name="estado"/>
                        <field name="dias_atraso" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Multas">
                            <field name="multa_ids">
                                <list editable="bottom">
                                    <field name="dias_atraso"/>
                                    <field name="multa_diaria"/>
                                    <field name="monto" readonly="1"/>
                                    <field name="pagado"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Multas -->
    <record id="view_biblioteca_multa_tree" model="ir.ui.view">
        <field name="name">biblioteca.multa.tree</field>
        <field name="model">biblioteca.multa</field>
        <field name="arch" type="xml">
            <list>
                <field name="prestamo_id"/>
                <field name="dias_atraso"/>
                <field name="multa_diaria"/>
                <field name="monto"/>
                <field name="pagado"/>
            </list>
        </field>
    </record>

    <record id="view_biblioteca_multa_form" model="ir.ui.view">
        <field name="name">biblioteca.multa.form</field>
        <field name="model">biblioteca.multa</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="prestamo_id"/>
                        <field name="dias_atraso"/>
                        <field name="multa_diaria"/>
                        <field name="monto" readonly="1"/>
                        <field name="pagado"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
<odoo>
  <!-- VISTA LISTA mínima -->
  <record id="view_biblioteca_prestamo_tree_min" model="ir.ui.view">
    <field name="name">biblioteca.prestamo.tree.min</field>
    <field name="model">biblioteca.prestamo</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="libro_id"/>
        <field name="socio_id"/>
        <field name="fecha_prestamo"/>
        <field name="estado"/>
      </tree>
    </field>
  </record>

  <!-- VISTA FORM mínima -->
  <record id="view_biblioteca_prestamo_form_min" model="ir.ui.view">
    <field name="name">biblioteca.prestamo.form.min</field>
    <field name="model">biblioteca.prestamo</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="libro_id"/>
            <field name="socio_id"/>
            <field name="fecha_prestamo"/>
            <field name="estado"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
